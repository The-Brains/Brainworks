<div class="panel panel-default">
  <div class="panel-body">
    <form>
      <div class="form-group">
        <label>Titel</label>
        <input class="form-control" ng-model="diagram.name">
      </div>
      <div class="form-group">
        <label>Beschreibung</label>
        <textarea class="form-control" rows="10" ng-model="diagram.description"></textarea>
      </div>
      <div class="checkbox">
        <label>
          <input type="checkbox" ng-model="diagram.isPublic">
          &Ouml;ffentlicher Diagram
        </label>
      </div>
      <button type="submit" class="btn btn-primary" ng-click="save(diagram)">Speichern</button>
      <button type="submit" class="btn btn-default" ng-click="cancel()">Abbrechen</button>
    </form>
  </div>
</div>