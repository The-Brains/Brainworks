<div class="panel panel-default">
  <div class="panel-body">
    <table class="table">
      <thead>
        <tr>
          <td colspan="2" class="signin-header">Register</td>
          <td colspan="2" class="signin-header">or</td>
          <td colspan="2" class="signin-header">Login</td>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td colspan="3">
            <form class="form-horizontal" ng-submit="signUp()" novalidate>
              <div class="form-group">
                <label for="forename" class="col-sm-3 control-label">Forename</label>
                <div class="col-sm-5">
                  <input id="forename" type="text" class="form-control" placeholder="Forename" ng-model="user.forename" />
                </div>
              </div>
              <div class="form-group">
                <label for="surname" class="col-sm-3 control-label">Surname</label>
                <div class="col-sm-5">
                  <input id="surname" type="text" class="form-control" placeholder="Surname" ng-model="user.surname" />
                </div>
              </div>
              <div class="form-group">
                <label for="username" class="col-sm-3 control-label">Username</label>
                <div class="col-sm-5">
                  <input id="username" type="text" class="form-control" placeholder="Username" ng-model="user.username" />
                </div>
              </div>
              <div class="form-group">
                <label for="email" class="col-sm-3 control-label">E-Mail</label>
                <div class="col-sm-5">
                  <input id="email" type="text" class="form-control" placeholder="E-Mail" ng-model="user.email" />
                </div>
              </div>
              <div class="form-group">
                <label for="emailRepitition" class="col-sm-3 control-label">E-Mail again</label>
                <div class="col-sm-5">
                  <input id="emailRepitition" type="text" class="form-control" placeholder="E-Mail again" ng-model="user.emailAgain" />
                </div>
              </div>
              <div class="form-group">
                <label for="password" class="col-sm-3 control-label">Password</label>
                <div class="col-sm-5">
                  <input id="password" type="password" class="form-control" placeholder="Password" ng-model="user.password" />
                </div>
              </div>
              <div class="form-group">
                <label for="passwordRepitition" class="col-sm-3 control-label">Password again</label>
                <div class="col-sm-5">
                  <input id="passwordRepitition" type="password" class="form-control" placeholder="Password again" ng-model="user.passwordAgain" />
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-offset-3 col-sm-5">
                  <button type="submit" class="btn btn-default">Sign up</button>
                </div>
              </div>
            </form>
          </td>
          <td colspan="3">
            <form class="form-horizontal" ng-submit="signIn()" name="signIn" novalidate>
              <div class="form-group">
                <label for="singinUsername" class="col-sm-3 control-label">Username</label>
                <div class="col-sm-5">
                  <input name="username" id="singinUsername" type="text" class="form-control" placeholder="Username" ng-model="user.username" />
                  <span style="color:red" ng-show="signIn.username.$dirty && signIn.username.$invalid">
                    <span ng-show="signIn.username.$error.required">Username is required.</span>
                  </span>
                </div>
              </div>
              <div class="form-group">
                <label for="signinPassword" class="col-sm-3 control-label">Password</label>
                <div class="col-sm-5">
                  <input name="password" id="signinPassword" type="password" class="form-control" placeholder="Password" ng-model="user.password" />
                  <span style="color:red" ng-show="signIn.password.$dirty && signIn.password.$invalid">
                    <span ng-show="signIn.password.$error.required">Password is required.</span>
                  </span>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-offset-3 col-sm-5">
                  <button type="submit" class="btn btn-default">Sign in</button>
                </div>
              </div>
            </form>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>